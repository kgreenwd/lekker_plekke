<% if @place.errors.present? %>
  <% @place.errors.full_messages.each do |msg| %>
    <p style="color: red"><b><%= msg %></b></p>
  <% end %>
<% end %>


<%= form_for @place do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </p>

  <%= f.submit %>
<% end %>